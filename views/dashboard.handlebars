<section class="section is-small has-background-light pt-6 section-container">
    {{#each plainPosts as |post|}}
    {{> blogPost}}
    {{/each}}


    <div class="field">
        <label class="label commentInput">New Blog Post</label>
        
        <div class="control">
            <input class="input" id="newTitle" type="text" placeholder="Title">
            <br>
            <textarea class="textarea" id="newContent" placeholder="Contents"></textarea>
        </div>
    </div>

    <br>
    <br>

    <div class="field">
        <div class="control submitButton">
            <button class="button is-link">Submit</button>
        </div>
    </div>
</section>

